<?xml version="1.0"?>
<config xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance" xsi:noNamespaceSchemaLocation="urn:magento:module:Magento_Config:etc/system_file.xsd">
    <system>
        <tab id="luigisbox" translate="label" sortOrder="9999">
            <label>Luigi's Box</label>
        </tab>
        <section id="luigisboxsearch_credentials" translate="label" type="text" sortOrder="999" showInDefault="1" showInWebsite="1"
                 showInStore="1">
            <label>Credentials</label>
            <tab>luigisbox</tab>
            <resource>Lugisbox_LugisboxSearch::LuigisBox_SearchSuite</resource>
            <group id="credentials" translate="label" type="text" sortOrder="0" showInDefault="1" showInWebsite="1" showInStore="1">
                <label>Credentials and Setup</label>
                <comment>
                    <![CDATA[
                        <table class="luigisbox">
                            <tr>
                                <td>API Documentation</td>
                                <td><a target="_blank" href="https://live.luigisbox.com/?utm_source=magento&utm_medium=extension&utm_campaign=magento_2&utm_term=shop-owner&utm_content=doc-link">https://live.luigisbox.com/#introduction</a></td>
                            </tr>
                        </table>
                        <br>
                        <hr>
                        <br>
                     ]]>
                </comment>
                <field id="enabled" translate="label comment" type="select" sortOrder="0" showInDefault="1" showInWebsite="1" showInStore="1">
                    <label>Enable Indexing</label>
                    <source_model>Magento\Config\Model\Config\Source\Yesno</source_model>
                    <comment>
                        <![CDATA[
                            TODO Comment that by enabling you include luigis script
                        ]]>
                    </comment>
                </field>
                <field id="tracker_id" translate="label comment" type="text" sortOrder="1" showInDefault="1" showInWebsite="1" showInStore="1">
                    <label>Tracker ID</label>
                    <comment>
                        <![CDATA[
                            Your Tracker ID is in the <a href="https://app.luigisbox.com/settings/keys" target="_blank">Luigi's Box dashboard</a>.
                        ]]>
                    </comment>
                </field>
                <field id="tracker_url" translate="label comment" type="text" sortOrder="2" showInDefault="1" showInWebsite="1" showInStore="1">
                    <label>Tracker URL</label>
                    <comment>
                        <![CDATA[
                            Your Tracker URL is in the <a href="https://app.luigisbox.com/settings/keys" target="_blank">Luigi's Box dashboard</a>.
                            Ie. https://cdn.luigisbox.com/myproject.js
                        ]]>
                    </comment>
                </field>
                <field id="api_key" translate="label comment" type="text" sortOrder="3" showInDefault="1" showInWebsite="1" showInStore="1">
                    <label>API key</label>
                    <comment>
                        <![CDATA[
                            You can find API key in the <a href="https://www.luigisbox.com/api-keys" target="_blank">Lugi's Box dashboard</a>.
                        ]]>
                    </comment>
                </field>
                <field id="autocomplete_config" translate="label comment" type="textarea" sortOrder="5" showInDefault="1" showInWebsite="1" showInStore="1">
                    <label>Autocomplete object</label>
                    <comment>
                        <![CDATA[
                            If empty default suggestion functionality will be used. You can find example config in the <a href="https://www.luigisbox.com/" target="_blank">Lugi's Box dashboard</a>.
                        ]]>
                    </comment>
                </field>
                <field id="autocomplete_block" translate="label comment" type="textarea" sortOrder="6" showInDefault="1" showInWebsite="1" showInStore="1">
                    <label>Autocomplete HTML block</label>
                    <comment>
                        <![CDATA[
                            Leave blank for default search block (form-mini.phtml in your theme).
                        ]]>
                    </comment>
                </field>
            </group>
        </section>
    </system>
</config>